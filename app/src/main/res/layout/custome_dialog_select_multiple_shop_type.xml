<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alert_heading"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:fontFamily="@font/maven_pro_medium"
        android:text="Select Vehicle Type"
        android:gravity="center"
        android:background="#1B63A7"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customAlertRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/alert_heading"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@drawable/red_curved_button"
        android:text="Submit" />


</androidx.constraintlayout.widget.ConstraintLayout>