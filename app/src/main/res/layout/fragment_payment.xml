<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv1"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:text="Limited Time Offer"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/lv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/oginalprice"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="4999"
            android:padding="4dp"
            android:background="@drawable/strike_thorugh_red"
            android:textColor="#E81818"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/offerprice"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:padding="4dp"
            android:text="500"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/lv1"
        android:gravity="center|left"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:text="Benefits"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/lv2"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:orientation="vertical"
        android:gravity="center|left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableLeft="@drawable/ic_baseline_send"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:text="Get more customers"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_send"
            android:drawablePadding="7dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Online booking facility."
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_send"
            android:drawablePadding="7dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Create your offer."
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_send"
            android:drawablePadding="7dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Sell and buy vehicles and accessories."
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableLeft="@drawable/ic_baseline_send"
            android:drawablePadding="7dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Share shop, product and offers."
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="24dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="And much more EXPLORE NOWâ€¦"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv3"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lv2"
        android:gravity="center|left"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="Contact us for more info: "
            android:padding="4dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rdmmail"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="roadmate.in@gmail.com"
            android:padding="4dp"
            android:textColor="#1636E6"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <Button
        android:visibility="visible"
        android:id="@+id/btnPayNow"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#fff"
        android:background="@drawable/red_curved_button"
        android:text="PAY NOW" />

    <LinearLayout
        android:id="@+id/spin_kit"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="@drawable/red_curved_button"
        android:gravity="center"
        android:padding="5dp">

        <com.github.ybq.android.spinkit.SpinKitView
            android:visibility="visible"
            style="@style/SpinKitView.Large.Wave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:SpinKit_Color="#fff" />

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="Skip"
        android:padding="9dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:drawablePadding="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>