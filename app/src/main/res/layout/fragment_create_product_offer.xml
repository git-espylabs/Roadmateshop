<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Title"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_corner_edit_text"/>


            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Small description"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_corner_edit_text"/>


            <EditText
                android:id="@+id/etNormalAmount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Normal Amount"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_corner_edit_text"/>

            <EditText
                android:id="@+id/etOfferAmount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Offer Amount"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:imeOptions="actionDone"
                android:background="@drawable/rounded_corner_edit_text"/>

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:hint="End Date"
                android:textColor="@color/textColor"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_corner_edit_text"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/relativeLayout3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:text="Add an Image"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/red_curved_button"
        android:text="SUBMIT" />

    <LinearLayout
        android:id="@+id/spin_kit_submit"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="@drawable/red_curved_button"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.5">
        <com.github.ybq.android.spinkit.SpinKitView
            android:visibility="visible"
            style="@style/SpinKitView.Large.Wave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:SpinKit_Color="#fff" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>